<%- include("templates/header", {headerMessage: "MMSE Questionnaire" }) %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-
        KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <title>MMSE Questionanire</title>
        <style>
            .buttondiv {
                text-align: center;
            }

            .btn5 {
                background-color: plum;
                border: none;
                color: white;
                align: center;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

            .form-check-input {
                border-color: plum;
                border: 4px solid;
            }

            .pill {
                width: 100%;
            }
        </style>
    </head>

    <body>

        <!--This code was on https://mdbootstrap.com/docs/standard/extended/bootstrap-survey-form/ with adjustments and modifications made by Emma Lee -->
        <!---MMSE Questionnaires obtained from https://cgatoolkit.ca/Uploads/ContentDocuments/MMSE.pdf and https://strokengine.ca/en/assessments/mini-mental-state-examination-mmse/-->
        <!-- performs app.post so that the user's answers can be stored in the database -->
        <form class="bg-white px-4" action="/mmse/:index" method="post">
            <p class="fw-bold">What year is it? <%= year %>
            </p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="year" id="radioYear1" value="2022">
                <label class="form-check-label" for="radioYear1">2022</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="year" id="radioYear2" value="2023">
                <label class="form-check-label" for="radioYear2">2023</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="year" id="radioYear3" value="2024">
                <label class="form-check-label" for="radioYear3">2024</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="year" id="radioYear4" value="2025">
                <label class="form-check-label" for="radioYear4">2025</label>
            </div>

            <p class="fw-bold">Which of the following is a country in North America? <%= country %>
            </p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="country" id="radioCountry1" value="Austria">
                <label class="form-check-label" for="radioCountry1">Austria</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="country" id="radioCountry2" value="Canada">
                <label class="form-check-label" for="radioCountry2">Canada</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="country" id="radioCountry3" value="Italy">
                <label class="form-check-label" for="radioCountry3">Italy</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="country" id="radioCountry4" value="Australia">
                <label class="form-check-label" for="radioCountry4">Australia</label>
            </div>

            <div class="buttondiv">
                <button class="btn btn-outline-light btn-lg px-5" type="submit"
                    style="font-size: 25px; background-color: plum;">Submit</button>
            </div>
        </form>
    </body>

    </html>
    <%- include("templates/footer") %>