        <!-- performs app.post so that the user's answers can be stored in the database -->
        <form class="bg-white px-4" action="/mmse" method="post">
            <p class="fw-bold">15. An apple is 40 cents, banana 60 cents, and grapefruit is 80 cents. How much is a
                pear?</p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm15" id="radioExample25" value="90 cents">
                <label class="form-check-label" for="radioExample25">
                    90 cents
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm15" id="radioExample26" value="100 cents">
                <label class="form-check-label" for="radioExample26">
                    100 cents
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm15" id="radioExample27" value="120 cents">
                <label class="form-check-label" for="radioExample27">
                    120 cents
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm15" id="radioExample28" value="140 cents">
                <label class="form-check-label" for="radioExample28">
                    140 cents
                </label>
            </div>
            <div class="buttondiv">
                <button class="btn btn-outline-light btn-lg px-5" type="logout"
                    style="font-size: 25px; background-color: plum;">
                    <a href="/mmse7" style="font-size: 20px; color:white;">Previous</a>
                </button>
                <button class="btn btn-outline-light btn-lg px-5" type="logout"
                    style="font-size: 25px; background-color: plum;">
                    <a href="/score" style="font-size: 20px; color:white;">Next</a>
                </button>
            </div>
        </form>

    </body>

