    <body>

        <!--This code was on https://mdbootstrap.com/docs/standard/extended/bootstrap-survey-form/ with adjustments and modifications made by Emma Lee -->
        <!---MMSE Questionnaires obtained from https://cgatoolkit.ca/Uploads/ContentDocuments/MMSE.pdf and https://strokengine.ca/en/assessments/mini-mental-state-examination-mmse/-->
        <!-- performs app.post so that the user's answers can be stored in the database -->
        <form class="bg-white px-4" action="/mmse6" method="post">
            <p class="fw-bold">Which choice does not contain multiples of each other?:</p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm11" id="radioExample11"
                    value="7, 14, 21, 28">
                <label class="form-check-label" for="radioExample11">
                    7, 14, 21, 28
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm11" id="radioExample12"
                    value="3, 6, 9, 12">
                <label class="form-check-label" for="radioExample12">
                    3, 6, 9, 12
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm11" id="radioExample13"
                    value="12, 24, 36, 48">
                <label class="form-check-label" for="radioExample13">
                    12, 24, 36, 48
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm11" id="radioExample14"
                    value="15, 30, 55, 70">
                <label class="form-check-label" for="radioExample14">
                    15, 30, 55, 70
                </label>
            </div>
            <p class="fw-bold">What is 5(5 + 5) x 2?</p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm12" id="radioExample21" value="50">
                <label class="form-check-label" for="radioExample21">
                    50
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm12" id="radioExample22" value="100">
                <label class="form-check-label" for="radioExample22">
                    100
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm12" id="radioExample23" value="150">
                <label class="form-check-label" for="radioExample23">
                    150
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="exampleForm12" id="radioExample24" value="200">
                <label class="form-check-label" for="radioExample24">
                    200
                </label>
            </div>
            <div class="buttondiv">
                <button class="btn btn-outline-light btn-lg px-5" type="submit"
                    style="font-size: 25px; background-color: plum;">Submit</button>
            </div>
        </form>
    </body>

