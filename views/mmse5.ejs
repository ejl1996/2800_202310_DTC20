<%- include("templates/header", {headerMessage: "MMSE Questionnaire" }) %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-
        KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <title>MMSE Questionanire</title>
        <style>
            .buttondiv {
                text-align: center;
            }

            .btn5 {
                background-color: plum;
                border: none;
                color: white;
                align: center;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

            .form-check-input {
                border-color: plum;
                border: 4px solid;
            }

            .pill {
                width: 100%;
            }
        </style>
    </head>

    <body>

        <!--This code was on https://mdbootstrap.com/docs/standard/extended/bootstrap-survey-form/ with adjustments and modifications made by Emma Lee -->
        <!---MMSE Questionnaires obtained from https://cgatoolkit.ca/Uploads/ContentDocuments/MMSE.pdf and https://strokengine.ca/en/assessments/mini-mental-state-examination-mmse/-->
        <!-- performs app.post so that the user's answers can be stored in the database -->
        <form class="bg-white px-4" action="/mmse5" method="post">
            <p class="fw-bold">9. What is the correct spelling of this word: zuchini?</p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="spelling" id="radioSpelling1" value="correct">
                <label class="form-check-label" for="radioSpelling1">It is already spelled correctly</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="spelling" id="radioSpelling2" value="zukini">
                <label class="form-check-label" for="radioSpelling2">zukini</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="spelling" id="radioSpelling3" value="zucchhini">
                <label class="form-check-label" for="radioSpelling3">zucchhini</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="spelling" id="radioSpelling4" value="zucchini">
                <label class="form-check-label" for="radioSpelling4">zucchini</label>
            </div>

            <p class="fw-bold">10. Place the following by size from smallest to largest: house, pin, computer, Jupiter
            </p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="size" id="radioSize1"
                    value="house, pin, computer, Jupiter">
                <label class="form-check-label" for="radioSize1">house, pin, computer, Jupiter</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="size" id="radioSize2"
                    value="pin, house, computer, Jupiter">
                <label class="form-check-label" for="radioSize2">pin, house, computer, Jupiter</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="size" id="radioSize3"
                    value="pin, computer, house, Jupiter">
                <label class="form-check-label" for="radioSize3">pin, computer, house, Jupiter</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="size" id="radioSize4"
                    value="Jupiter, house, computer, pin">
                <label class="form-check-label" for="radioSize4">Jupiter, house, computer, pin</label>
            </div>
            <div class="buttondiv">
                <button class="btn btn-outline-light btn-lg px-5" type="submit"
                    style="font-size: 25px; background-color: plum;">Submit</button>
            </div>
        </form>
    </body>

    </html>
    <%- include("templates/footer") %>