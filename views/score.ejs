<%- include("templates/header", {headerMessage: "Score" }) %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <title>Score</title>
        <style>
            body {
                background-position: center;
                height: 100vh;
            }

            /* Existing styles */

            .bg-custom {
                background-color: plum;
            }

            .btn-responsive {
                font-size: 20px;
                width: 100%;
                max-width: 200px;
            }

            /* Mobile-specific styles */
            @media (max-width: 576px) {
                .btn-responsive {
                    font-size: 16px;
                }
            }
        </style>
    </head>

    <body>
        <!--This code was on https://mdbootstrap.com/docs/standard/extended/login/ with adjustments and modifications made by Emma Lee -->
        <section class="vh-100 gradient-custom">
            <form class="bg-white px-4" action="/recommendation" method="post">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                            <div class="card bg-custom text-white">
                                <div class="card-body p-5 text-center">
                                    <div class="mb-md-5 mt-md-4 pb-5">
                                        <h5 class="fw-bold mb-2 text-uppercase">Thank you for completing the
                                            questionnaire.
                                        </h5>
                                        <br>
                                        <br>
                                        <h5 class="fw-bold mb-2 text-uppercase">Your Score is <%= totalScore %> out of
                                                20
                                                for our MMSE and Screening Questionnaire.</h5>
                                        <p class="text-white-50 mb-5" style="color: black; font-size: 30px"></p>
                                        <br>
                                        <button class="btn btn-outline-light btn-sm btn-responsive"
                                            type="submit">Recommendations</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </body>

    </html>
    <%- include("templates/footer") %>