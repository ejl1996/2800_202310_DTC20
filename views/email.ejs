                                        <label class="form-label" for="typeEmailX" style="font-size: 25px;"></label>
                                    </div>
                                    <button class="btn btn-outline-light btn-lg px-5" type="button"
                                        onclick="sendEmail()" style="font-size: 25px;">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
