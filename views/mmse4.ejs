<%- include("templates/header", {headerMessage: "MMSE Questionnaire" }) %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-
        KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <title>MMSE Questionanire</title>
        <style>
            .buttondiv {
                text-align: center;
            }

            .btn5 {
                background-color: plum;
                /* Green */
                border: none;
                color: white;
                align: center;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

            .form-check-input {
                border-color: plum;
                border: 4px solid;
            }

            .pill {
                width: 100%;
            }
        </style>
    </head>

    <body>

        <!--This code was on https://mdbootstrap.com/docs/standard/extended/bootstrap-survey-form/ with adjustments and modifications made by Emma Lee -->
        <!---MMSE Questionnaires obtained from https://cgatoolkit.ca/Uploads/ContentDocuments/MMSE.pdf and https://strokengine.ca/en/assessments/mini-mental-state-examination-mmse/-->
        <!-- performs app.post so that the user's answers can be stored in the database -->
        <form class="bg-white px-4" action="/mmse" method="post">
            <p class="fw-bold">7. Which of the following is not an ethnic group?</p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="ethnic" id="radioEthnic1" value="Canadian">
                <label class="form-check-label" for="radioEthnic1">Canadian</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="ethnic" id="radioEthnic2" value="American">
                <label class="form-check-label" for="radioEthnic2">American</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="ethnic" id="radioEthnic3" value="Korean">
                <label class="form-check-label" for="radioEthnic3">Korean</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="ethnic" id="radioEthnic4" value="French">
                <label class="form-check-label" for="radioEthnic4">French</label>
            </div>

            <br>

            <p class="fw-bold">8. What is (5 + 5) x 2?</p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="math" id="radioMath1" value="10">
                <label class="form-check-label" for="radioMath1">10</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="math" id="radioMath2" value="20">
                <label class="form-check-label" for="radioMath2">20</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="math" id="radioMath3" value="30">
                <label class="form-check-label" for="radioMath3">30</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="math" id="radioMath4" value="40">
                <label class="form-check-label" for="radioMath4">40</label>
            </div>

            <div class="buttondiv">
                <button class="btn btn-outline-light btn-lg px-5" type="logout"
                    style="font-size: 25px; background-color: plum;">
                    <a href="/mmse3" style="font-size: 20px; color:white;">Previous</a>
                </button>
                <button class="btn btn-outline-light btn-lg px-5" type="logout"
                    style="font-size: 25px; background-color: plum;">
                    <a href="/mmse5" style="font-size: 20px; color:white;">Next</a>
                </button>
            </div>
        </form>

    </body>

    </html>
    <%- include("templates/footer") %>