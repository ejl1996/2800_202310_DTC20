<%- include("templates/header", {headerMessage: "MMSE Questionnaire" }) %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-
        KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <title>MMSE Questionanire</title>
        <style>
            .buttondiv {
                text-align: center;
            }

            .btn5 {
                background-color: plum;
                border: none;
                color: white;
                align: center;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

            .form-check-input {
                border-color: plum;
                border: 4px solid;
            }

            .pill {
                width: 100%;
            }

            img {
                border: 1px solid #ddd;
                border-radius: 2px;
                padding: 3px;
                width: 100px;
            }
        </style>
    </head>

    <body>

        <!--This code was on https://mdbootstrap.com/docs/standard/extended/bootstrap-survey-form/ with adjustments and modifications made by Emma Lee -->
        <!---MMSE Questionnaires obtained from https://cgatoolkit.ca/Uploads/ContentDocuments/MMSE.pdf and https://strokengine.ca/en/assessments/mini-mental-state-examination-mmse/-->
        <!-- performs app.post so that the user's answers can be stored in the database -->
        <form class="bg-white px-4" action="/mmse2" method="post">
            <p class="fw-bold">3. What is the name of this image?</p>
            <img src="10155.jpg" alt="wristwatch">
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="image" id="radioImage1" value="Wristwatch">
                <label class="form-check-label" for="radioImage1">Wristwatch</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="image" id="radioImage2" value="Airplane">
                <label class="form-check-label" for="radioImage2">Airplane</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="image" id="radioImage3" value="Bracelet">
                <label class="form-check-label" for="radioImage3">Bracelet</label>
            </div>

            <p class="fw-bold">4. Which of the following is not a weekday?</p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="weekday" id="radioWeekday1" value="Monday">
                <label class="form-check-label" for="radioWeekday1">Monday</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="weekday" id="radioWeekday2" value="Friday">
                <label class="form-check-label" for="radioWeekday2">Friday</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="weekday" id="radioWeekday3" value="Saturday">
                <label class="form-check-label" for="radioWeekday3">Saturday</label>
            </div>

            <div class="buttondiv">
                <button class="btn btn-outline-light btn-lg px-5" type="submit"
                    style="font-size: 25px; background-color: plum;">Submit</button>
            </div>
        </form>
    </body>

    </html>
    <%- include("templates/footer") %>