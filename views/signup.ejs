<%- include("templates/header", {headerMessage: "Sign Up" }) %>

    <!-- This was edited and modified from Emma Lee's COMP 2537 Assignment 2. -->

    <div class="signupsetting">
        <div class="text-center">
            <!-- perform the sign up app.post method so that the user's information can be stored in the database -->
            <form class="form-signup" action="/signup" method="post" onsubmit="return validation();">
                <h1 class="h3 mb-3 font-weight-normal" style="color:  #778251">Sign Up</h1>
                <!-- users are required to enter their username, email address, password, and phone number to sign up for an account. -->
                <input name="username" type="text" placeholder="Username">
                <br>
                <input name="email" type="email" placeholder="Email address">
                <br>
                <input name="password" type="password" placeholder="Password">
                <br>
                <input name="number" type="number" placeholder="Phone number">
                <br>
                <br>
                <button class="btn btn-outline-light btn-lg px-5" type="submit" style="font-size: 25px; background-color:
                                    #778251;"><a href="/" style="font-size: 20px; color:white;">Submit</a></button>
            </form>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Error</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p id="errorMessage"></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Using array to store the missing fields, and then join them with a comma and space to form a string. Written with assistance from chatGPT -->
        <script>
            function validation() {
                var username = document.getElementsByName("username")[0].value;
                var email = document.getElementsByName("email")[0].value;
                var password = document.getElementsByName("password")[0].value;
                var number = document.getElementsByName("number")[0].value;

                // check if the user miss any of the fields
                var missingFields = [];

                if (!username) {
                    missingFields.push("Username");
                }
                if (!email) {
                    missingFields.push("Email");
                }
                if (!password) {
                    missingFields.push("Password");
                }
                if (!number) {
                    missingFields.push("Phone");
                }

                // if user miss any of the fields, the error message will show up.
                if (missingFields.length > 0) {
                    $("#errorMessage").html("Please provide " + missingFields.join(", ") + ".");
                    $("#myModal").modal("show");
                    return false;
                }

                return true;
            }
        </script>

        <!-- Bootstrap CSS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <!-- jQuery library -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <!-- Popper JS -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    </div>
    </body>

    </html>