<%- include("templates/header", {headerMessage: "Screening" }) %>

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-
        KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <title>Check-In</title>
        <style>
            .text-center mb-4 {
                color: plum;
            }

            .buttondiv {
                text-align: center;
            }

            .btn5 {
                background-color: plum;
                border: none;
                color: white;
                align: center;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

            .form-check-input {
                border-color: plum;
                border: 4px solid;
            }

            .pill {
                width: 100%;
            }
        </style>
    </head>

    <body>
        <!-- Questions from PubMed, NCBI and Alzheimer's Association page. More details: https://docs.google.com/document/d/1ISjQYTIjzLfVuO0gXleGGD7JBfv7vluva0KhFq04PMo/edit?skip_itp2_check=true -->
        <div class="riskfactorquestion light-green-background">
            <h4 class="text-center mb-4">Screening questionnaire </h4>
            <form class="bg-white px-4" action="/mmse/:index" method="post">
                <p class="fw-bold">Do you have diabetes? <% diabetes %>
                </p>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="exampleForm15" id="radioExample25"
                        value="90 cents">
                    <label class="form-check-label" for="radioExample25">
                        Yes
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="exampleForm15" id="radioExample26"
                        value="100 cents">
                    <label class="form-check-label" for="radioExample26">
                        No
                    </label>
                </div>
                <p class="fw-bold">Do you have a steady income? <% income %>
                </p>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="exampleForm14" id="radioExample21"
                        value="Mix dry ingredients.">
                    <label class="form-check-label" for="radioExample21">
                        Yes
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="exampleForm14" id="radioExample22"
                        value="Spoon batter onto skillet or griddle.">
                    <label class="form-check-label" for="radioExample22">
                        No
                    </label>
                </div>
                <div class="buttondiv">
                    <button class="btn btn-outline-light btn-lg px-5" type="submit"
                        style="font-size: 25px; background-color: plum;">Submit</button>
                </div>
            </form>
        </div>
    </body>
    <%- include("templates/footer") %>