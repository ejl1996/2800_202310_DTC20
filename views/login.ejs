<%- include("templates/header", {headerMessage: "Welcome" }) %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-
        KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <title>Document</title>
        <style>
            body {
                background-image: url('login.jpg');
                background-position: center;
                height: 100vh;
            }

            @keyframes rotate {
                0% {
                    transform: rotate(0deg);
                }

                100% {
                    transform: rotate(1080deg);
                }
            }

            .rotate-animation {
                animation: rotate 3s ease-in-out;
            }

            @keyframes jump {
                0% {
                    transform: translateY(0);
                }

                50% {
                    transform: translateY(-20px);
                }

                100% {
                    transform: translateY(0);
                }
            }

            .jump-animation {
                animation: jump 0.5s ease-in-out infinite;
            }
        </style>
    </head>

    <body>
        <!--This code was on https://mdbootstrap.com/docs/standard/extended/login/ with adjustments and modifications made by Emma Lee -->
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg text-white" style="border-radius: 1rem; background-color: plum;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">
                                    <form class="form-signup" action="/login" method="post">

                                        <h1 class="fw-bold mb-2 text-uppercase" id="login">Login</h1>

                                        <script>
                                            // Get a reference to the login element
                                            var accountElement = document.getElementById("login");

                                            // Initialize a click counter
                                            var clickCount = 0;

                                            // Add event listener to the account element
                                            accountElement.addEventListener("click", function () {
                                                clickCount++;

                                                // Check if the element has been clicked twice
                                                if (clickCount === 2) {

                                                    // Add a CSS class to trigger the jump animation
                                                    accountElement.classList.add("jump-animation");

                                                    // Generate a random color
                                                    var randomColor = '#' + Math.floor(Math.random() * 16777215).toString(16);

                                                    // Change the text color to the random color
                                                    accountElement.style.color = randomColor;


                                                    // Change the font size to a bigger size
                                                    accountElement.style.fontSize = "3em";

                                                    // Change the font style
                                                    accountElement.style.fontFamily = "Brush-script";

                                                    // After a delay, remove the CSS class and reset the text color
                                                    setTimeout(function () {
                                                        accountElement.classList.remove("jump-animation");
                                                        accountElement.style.color = "";
                                                        accountElement.style.fontFamily = "";
                                                    }, 3000); // Delay for 3 seconds

                                                    // Reset the click count
                                                    clickCount = 0;
                                                }
                                            });
                                        </script>
                                        <p class="text-white-50 mb-5" style="color: black; font-size: 32px">Please enter
                                            your login ID and password!</p>
                                        <br>
                                        <br>
                                        <div class="form-outline form-white mb-4">
                                            <input type="text" id="username" name="username" placeholder="Username"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="username" style="font-size: 25px;"></label>
                                        </div>

                                        <div class="form-outline form-white mb-4">
                                            <input type="password" id="password" name="password" placeholder="Password"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="password" style="font-size: 25px;"></label>
                                        </div>
                                        <p class="small mb-5 pb-lg-2"><a href="/password"
                                                style="font-size: 18px; color: white;">Forgot password?</a></p>
                                        <p class="small mb-5 pb-lg-2" ; style="font-size: 18px; color: white;">Don't
                                            have an account? <br><a href="/signup" class="text-white-50 fw-bold">Sign
                                                Up</a>
                                        </p>
                                        <button class="btn btn-outline-light btn-lg px-5" type="submit"
                                            style="font-size: 25px;">Login</button>
                                        <br>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </body>

    </html>