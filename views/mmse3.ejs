<%- include("templates/header", {headerMessage: "MMSE Questionnaire" }) %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-
        KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <title>MMSE Questionanire</title>
        <style>
            .buttondiv {
                text-align: center;
            }

            .btn5 {
                background-color: plum;
                /* Green */
                border: none;
                color: white;
                align: center;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

            .form-check-input {
                border-color: plum;
                border: 4px solid;
            }

            .pill {
                width: 100%;
            }

            img {
                border: 1px solid #ddd;
                border-radius: 2px;
                padding: 3px;
                width: 100px;
            }
        </style>
    </head>

    <body>

        <!--This code was on https://mdbootstrap.com/docs/standard/extended/bootstrap-survey-form/ with adjustments and modifications made by Emma Lee -->
        <!---MMSE Questionnaires obtained from https://cgatoolkit.ca/Uploads/ContentDocuments/MMSE.pdf and https://strokengine.ca/en/assessments/mini-mental-state-examination-mmse/-->
        <!-- performs app.post so that the user's answers can be stored in the database -->
        <form class="bg-white px-4" action="/mmse/:index" method="post">
            <p class="fw-bold">What is the name of this image? <%= ball %>
            </p>
            <img src="basketball.gif" style="align: center" alt="basketball">
            <br>
            <br>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="image" id="radioBall1" value="Volleyball">
                <label class="form-check-label" for="radioBall1">Volleyball</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="image" id="radioBall2" value="Basketball">
                <label class="form-check-label" for="radioBall2">Basketball</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="image" id="radioBall3" value="Dodgeball">
                <label class="form-check-label" for="radioBall3">Dodgeball</label>
            </div>

            <p class="fw-bold">Which of the following does not belong? <% subject %>
            </p>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="belong" id="radioBelong1" value="Algebra">
                <label class="form-check-label" for="radioBelong1">Algebra</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="belong" id="radioBelong2" value="Philosophy">
                <label class="form-check-label" for="radioBelong2">Philosophy</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="belong" id="radioBelong3" value="Bracelet">
                <label class="form-check-label" for="radioBelong3">Bracelet</label>
            </div>

            <div class="buttondiv">
                <button class="btn btn-outline-light btn-lg px-5" type="submit"
                    style="font-size: 25px; background-color: plum;">Submit</button>
            </div>
        </form>
    </body>

    </html>
    <%- include("templates/footer") %>